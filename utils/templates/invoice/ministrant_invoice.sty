%===============================================================================
% Custom commands
%===============================================================================
\newenvironment{infoSection}{
    \infoSectionStyle\tabular[t]{@{} r @{\hspace{0.5em}} l}
}{\endtabular}

\newcommand{\twocolumnlayout}[2]{
    \begin{tabular}[t]{@{} p{.45\linewidth} @{} p{.45\linewidth} @{}} #1 & #2 \end{tabular}
}

\newcommand{\infoBox}[2]{
    {\titleStyle #1} & \begin{minipage}[t]{.22\textwidth} #2 \end{minipage} \\
    \noalign{\addvspace{1ex}}
}

\newcommand{\infoQRCode}[2]{
    \begin{minipage}[t]{.12\textwidth} \begin{flushright} {\titleStyle #1} \end{flushright} \end{minipage} & \raisebox{-\height}{\begin{minipage}[t]{.20\textwidth} \strut #2 \end{minipage}} \\
    \noalign{\addvspace{1ex}}
}

\newcommand{\infoSub}[2]{
    \noalign{\vspace{-0.8ex}}
    {\color{subduedColor} #1} & \begin{minipage}[t]{.20\textwidth} \infoSubStyle #2 \end{minipage} \\
    \noalign{\addvspace{1.5ex}}
}
